# Azure AI Foundry Services Configuration
# Platform built on Microsoft Azure AI Foundry Services for interoperable agent communication

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Azure AI Foundry Project Settings
AZURE_AI_PROJECT_NAME=anomaly-detection-agents
AZURE_AI_WORKSPACE_NAME=retail-intelligence-workspace
AZURE_RESOURCE_GROUP=rg-retail-analytics
AZURE_SUBSCRIPTION_ID=your_subscription_id

# Azure Storage for Data and Model Artifacts
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_CONTAINER_NAME=anomaly-data
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string

# Azure Cognitive Services
AZURE_COGNITIVE_SERVICES_ENDPOINT=your_cognitive_services_endpoint
AZURE_COGNITIVE_SERVICES_KEY=your_cognitive_services_key

# Azure Key Vault for secure credential management
AZURE_KEYVAULT_URL=your_keyvault_url
AZURE_CLIENT_ID=your_service_principal_client_id
AZURE_CLIENT_SECRET=your_service_principal_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Application settings
LOG_LEVEL=INFO
STREAMLIT_SERVER_PORT=8501
ENABLE_CACHE=true
MAX_UPLOAD_SIZE_MB=100
AGENT_COMMUNICATION_TIMEOUT=30

# AI Agent Configuration
ENABLE_PARALLEL_EXECUTION=true
MAX_CONCURRENT_AGENTS=5
DEFAULT_CONFIDENCE_THRESHOLD=0.7
